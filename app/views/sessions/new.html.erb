<h1>Sign In</h1>
<%= form_tag '/signin' do %>
  <div class="field">
    <p>Sign in with your email:</p>
    <%= email_field_tag 'stylist_email' %>
  </div>

  <div class="field">
    <p>Password:</p>
    <%= password_field_tag 'password' %>
  </div>

  <div class="field">
    <%= submit_tag 'Sign In' %>
  </div>
<% end %>

