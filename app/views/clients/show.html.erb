<%= link_to "Back to All Clients", stylist_clients_path(@stylist), class: "btn btn-success" %>

  <h2>Client Details</h2>

  <div class="client-photo">
    Client Photo goes here:
    <%= @client.photo%>
  </div>

<div class="client-detail">
  <table class="">
    <tr>
      <th>Full Name</th>
      <td><%= @client.first_name %> <%= @client.last_name %></td>
    </tr>
    <tr>
      <th>Address</th>
      <td><%= @client.street_address %>, <%= @client.city %> <%= @client.state %> <%= @client.zip %></td>
    </tr>
    <tr>
      <th>Cell   </th>
      <td><%= @client.cell_phone %></td>
    </tr>
    <tr>
      <th>Home</th>
      <td><%= @client.home_phone %></td>
    </tr>
    <tr>
      <th>Client Since</th>
      <td><%= client_since %></td>
    </tr>
  </table>
  <div>
    <%= link_to "Edit", edit_stylist_client_path(@stylist, @client), class: 'btn btn-primary' %>
    <%= link_to "Delete", stylist_client_path(@stylist, @client), class: 'btn btn-danger', :method => :delete, :confirm => "Are you sure you want to delete #{@client.first_name}?" %>
  </div>
</div><!-- client-detail -->

<div>
  <input type="button" id="create_text" value="Text Client", class="btn btn-success" />
  <input type="button" id="close-text-box" value="X", class="btn-success" />

</div>
<div id="text-client-box">
<%= form_tag '/message' do %>
  <p>Phone:
    <%= text_field_tag 'phone' %>
  </p>
  <p>Message:
    <%= text_area_tag 'message' %>
  </p>
    <%= submit_tag 'Send Message', class: "btn btn-success" %>
<% end %>
</div>





