<h1>Add new Clients</h1>

<div>
  <%= form_for @client do |f| %>
    <div class='field'>
      <%= f.label :first_name, "First Name" %><br>
      <%= f.text_field :first_name %><br>

      <%= f.label :last_name, "Last Name" %><br>
      <%= f.text_field :last_name %>
    </div>

    <div class='field'>
      <%= f.label :street_address, "Street Address" %><br>
      <%= f.text_field :street_address %><br>
      <%= f.label :city, "City" %><br>
      <%= f.text_field :city %><br>
      <%= f.label :zip, "Zip" %><br>
      <%= f.text_field :zip %>
    </div>

    <div class='field'>
      <%= f.label :cell_phone, "Cell Phone" %><br>
      <%= f.text_field :cell_phone %><br>

      <%= f.label :home_phone, "Home Phone" %><br>
      <%= f.text_field :home_phone %>
    </div>

    <div class='field'>
      <%= f.label :client_email, "Email" %><br>
      <%= f.email_field :client_email %>
    </div>

    <div class='field'>
      <%= submit_tag "Add Client Now."  %>
    </div>

  <% end %>
</div>