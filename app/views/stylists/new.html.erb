<h1>Sign Up</h1>

 <% if @stylist.errors.any? %>
  <div class="error_explaination">
    <h2><%= pluralize(@stylist.errors.count, "error") %> prohibited your
     sign up from being completed</h2>
    <ul>
      <% @stylist.errors.full_messages.each do |msg| %>
      <li><%= link_to image_tag('error.svg', size: '10x10', id: 'error_symbol'), msg %> <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %><!-- ends errors -->

<div class="form">
<%= form_for @stylist, :html => {:multipart => true} do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>

   <div class="form_buttons">
   <%= f.submit "Sign Up", class: "btn btn-success" %>
  </div>

<% end %>
</div><!-- end form -->



















