:javascript
  _kmq.push(['identify', '#{current_user.id}']);

<div id="sign-in-dropdown"> <!-- This is the main page dropdown -->
  <div id="sign_in_content">
    <%= form_tag '/signin' do %>
      <div class="field">
        <h3>Sign In <span>with your email and password</span></h3>
          Email
          <%= email_field_tag 'stylist_email' %>

          Password
          <%= password_field_tag 'password', placeholder="" %>
          <%= link_to "X", root_path, :id => "close-btn", :class => "btn btn-warning" %>
      </div>

      <div class="field">
        <%= submit_tag 'Sign In', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>