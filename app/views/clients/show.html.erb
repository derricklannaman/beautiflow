<%= link_to "Back to All Clients", clients_path %>

<div class="client-detail">
  <h2>Client Details</h2>

  <div class="client-photo">
    Client Photo goes here:
    <%= @client.photo%>
  </div>

  <table class="">
    <tr>
      <th>Full Name</th>
      <td><%= @client.first_name %> <%= @client.last_name %></td>
    </tr>
    <tr>
      <th>Address</th>
      <td><%= @client.street_address %>, <%= @client.city %> <%= @client.state %> <%= @client.zip %></td>
    </tr>
    <tr>
      <th>Cell   </th>
      <td><%= @client.cell_phone %></td>
    </tr>
    <tr>
      <th>Home</th>
      <td><%= @client.home_phone %></td>
    </tr>
    <tr>
      <th>Client Since</th>
      <td><%= client_since %></td>
    </tr>
  </table>
</div><!-- client-detail -->
<div>
  <%= link_to "Edit", edit_client_path(@client), class: 'action-edit' %>
  <%= link_to "Delete", client_path(@client), class: 'action-delete', :method => :delete, :confirm => "Are you sure you want to delete #{@client.first_name}?" %>
</div>