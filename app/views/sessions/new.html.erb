<h1>Login</h1>
<%= form_tag '/signin' do %>
  <div class="field">
    Sign in with your email:
    <%= email_field_tag 'email' %>
  </div>

  <div class="field">
    Password:
    <%= password_field_tag 'password' %>
  </div>

  <div class="field">
    <%= submit_tag 'Sign In' %>
  </div>
<% end %>

<%= link_to "Go to Home page", root_path %>